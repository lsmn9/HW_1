<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="168dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:text="Brightness"
        android:textColor="#050101"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar5"
        app:layout_constraintStart_toStartOf="@+id/seekBar5" />

    <SeekBar
        android:id="@+id/seekBar5"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:layout_marginBottom="124dp"
        android:backgroundTint="#0A21A5"
        android:progressTint="#1E1919"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBar4"
        android:layout_width="267dp"
        android:layout_height="77dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#0A21A5"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="183dp"
        android:layout_height="31dp"
        android:text="Contrast"
        android:textColor="#050101"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar4"
        app:layout_constraintStart_toStartOf="@+id/seekBar4" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="textPersonName"
        android:text="Settings"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>