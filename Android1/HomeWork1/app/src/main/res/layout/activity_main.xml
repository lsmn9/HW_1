<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#084955"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Weather"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="364dp"
        android:background="#E8D7D7"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="36sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="+18 ..+20"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="47dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="36dp"
        android:adjustViewBounds="false"
        android:background="#D1B1B1"
        app:layout_constraintBottom_toTopOf="@+id/Weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/editbox_background"
        tools:srcCompat="@drawable/ic_baseline_cloud_queue_24" />

    <TextView
        android:id="@+id/City"
        android:layout_width="171dp"
        android:layout_height="33dp"
        android:layout_marginEnd="197dp"
        android:layout_marginBottom="38dp"
        android:background="#E8D7D7"
        android:enabled="true"
        android:freezesText="true"
        android:text="London"
        android:textColor="#0B0A0A"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Weather"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="281dp"
       
        android:text="Обновить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>