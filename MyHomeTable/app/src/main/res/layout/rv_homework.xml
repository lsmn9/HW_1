<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/subject_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:gravity="center"
        android:text="SUBJ:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/divider_home"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/subject_home"
        app:layout_constraintStart_toStartOf="@id/subject_home"
        app:layout_constraintEnd_toEndOf="@id/subject_home" />

    <View
        android:layout_width="5dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="@id/work_home"
        app:layout_constraintStart_toEndOf="@id/work_home" />

    <TextView
        android:id="@+id/work_home"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:background="#112B2E"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Homework"
        app:layout_constraintTop_toBottomOf="@id/divider_home"
        app:layout_constraintStart_toStartOf="@id/divider_home"
        app:layout_constraintEnd_toEndOf="@id/divider_home"  />

</androidx.constraintlayout.widget.ConstraintLayout>