<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/time_to_exam_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Времени до экзамена: "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_to_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/time_to_exam_label"
        app:layout_constraintTop_toBottomOf="@id/time_to_exam_label"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/classes_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="classes:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/time_to_exam_label"
        app:layout_constraintTop_toBottomOf="@id/time_to_exam" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_lessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/time_to_exam"
        app:layout_constraintStart_toStartOf="@id/time_to_exam"
        app:layout_constraintTop_toBottomOf="@id/classes_lbl" />

    <TextView
        android:id="@+id/homework_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:text="homework:"
        app:layout_constraintStart_toStartOf="@id/time_to_exam_label"
        app:layout_constraintTop_toBottomOf="@id/rv_home_lessons" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@id/rv_home_lessons"
        app:layout_constraintStart_toStartOf="@id/rv_home_lessons"
        app:layout_constraintTop_toBottomOf="@id/homework_lbl" />

</androidx.constraintlayout.widget.ConstraintLayout>