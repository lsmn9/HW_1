<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from time to time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subject_classes"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="#0DDF15"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/skyper"
        app:layout_constraintTop_toBottomOf="@id/time_classes" />


    <View
        android:background="@color/white"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/subject_classes"
        app:layout_constraintStart_toStartOf="@id/subject_classes"
        app:layout_constraintEnd_toEndOf="@id/subject_classes" />


    <TextView
        android:id="@+id/skyper"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="S"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#2DC8DC"
        app:layout_constraintStart_toEndOf="@id/subject_classes"
        app:layout_constraintTop_toTopOf="@id/subject_classes" />

    <View
        android:id="@+id/view"
        android:background="@color/white"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/subject_classes"
        app:layout_constraintStart_toEndOf="@id/skyper" />


</androidx.constraintlayout.widget.ConstraintLayout>